---
import Hero from "@/components/landing/Hero.astro";
import HowItWorks from "@/components/landing/HowItWorks.astro";
import PreviewSection from "@/components/landing/PreviewSection.astro";
import WhyThis from "@/components/landing/WhyThis.astro";
import Features from "@/components/landing/Features.astro";
import CallToAction from "@/components/landing/CallToAction.astro";
import "@/styles/global.css";
import DocsLayout from "@/layouts/DocsLayout.astro";
---

<DocsLayout
    title="README → Docs Generator | Turn your GitHub README into a site"
    variant="landing"
>
    <Hero />
    <HowItWorks />
    <PreviewSection />
    <WhyThis />
    <CallToAction />

    <footer class="bg-gray-50 py-12 border-t border-gray-200">
        <div
            class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center bg-gray-50 border-t border-gray-200"
        >
            <div class="mb-4 md:mb-0">
                <span class="text-gray-500 text-sm"
                    >© 2026 README → Docs. Open Source.</span
                >
            </div>
            <div class="flex space-x-6">
                <a href="#" class="text-gray-400 hover:text-gray-500">
                    Twitter
                </a>
                <a
                    href="https://github.com/Githi54/readme-docs"
                    class="text-gray-400 hover:text-gray-500"
                >
                    GitHub
                </a>
            </div>
        </div>
    </footer>
</DocsLayout>
