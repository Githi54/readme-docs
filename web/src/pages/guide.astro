---
import DocsLayout from "@/layouts/DocsLayout.astro";
import "@/styles/global.css";
---

<DocsLayout title="Guide | README Docs" variant="landing">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <header class="text-center mb-16">
            <h1 class="text-4xl font-extrabold text-white sm:text-5xl mb-6">
                How to Use <span class="text-indigo-400">README Docs</span>
            </h1>
            <p class="text-xl text-gray-400">
                Turn your GitHub README into a beautiful documentation site in
                seconds.
            </p>
        </header>

        <div class="space-y-24">
            <!-- Step 1 -->
            <section class="relative">
                <div
                    class="absolute inset-0 bg-indigo-500/5 blur-3xl rounded-full"
                >
                </div>
                <div class="relative grid md:grid-cols-2 gap-12 items-center">
                    <div class="order-2 md:order-1">
                        <div
                            class="bg-white/5 border border-white/10 rounded-xl p-6 shadow-2xl"
                        >
                            <div
                                class="flex items-center gap-3 mb-4 border-b border-white/5 pb-4"
                            >
                                <div class="w-3 h-3 rounded-full bg-red-500">
                                </div>
                                <div class="w-3 h-3 rounded-full bg-yellow-500">
                                </div>
                                <div class="w-3 h-3 rounded-full bg-green-500">
                                </div>
                                <div class="text-xs text-gray-500 ml-2">
                                    readme-docs.com
                                </div>
                            </div>
                            <div class="space-y-4">
                                <div
                                    class="h-10 bg-white/5 rounded-lg border border-white/10 flex items-center px-4 text-gray-400 text-sm"
                                >
                                    facebook/react
                                </div>
                                <div
                                    class="h-10 bg-indigo-600 rounded-lg flex items-center justify-center text-white text-sm font-medium"
                                >
                                    Generate Documentation
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="order-1 md:order-2">
                        <div class="flex items-center gap-4 mb-4">
                            <span
                                class="flex items-center justify-center w-8 h-8 rounded-full bg-indigo-500/20 text-indigo-400 font-bold border border-indigo-500/30"
                                >1</span
                            >
                            <h2 class="text-2xl font-bold text-white">
                                Enter Repository URL
                            </h2>
                        </div>
                        <p class="text-gray-400 text-lg leading-relaxed">
                            Simply paste the link to your GitHub repository or
                            type the <code>owner/repo</code> format (e.g., <code
                                >facebook/react</code
                            >).
                        </p>
                        <ul class="mt-6 space-y-3 text-gray-400">
                            <li class="flex items-start gap-3">
                                <svg
                                    class="w-5 h-5 text-indigo-400 mt-1"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 13l4 4L19 7"></path></svg
                                >
                                <span>Supports public repositories</span>
                            </li>
                            <li class="flex items-start gap-3">
                                <svg
                                    class="w-5 h-5 text-indigo-400 mt-1"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 13l4 4L19 7"></path></svg
                                >
                                <span>Auto-detects README files</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>

            <!-- Step 2 -->
            <section class="relative">
                <div
                    class="absolute inset-0 bg-purple-500/5 blur-3xl rounded-full"
                >
                </div>
                <div class="relative grid md:grid-cols-2 gap-12 items-center">
                    <div>
                        <div class="flex items-center gap-4 mb-4">
                            <span
                                class="flex items-center justify-center w-8 h-8 rounded-full bg-purple-500/20 text-purple-400 font-bold border border-purple-500/30"
                                >2</span
                            >
                            <h2 class="text-2xl font-bold text-white">
                                Instant Generation
                            </h2>
                        </div>
                        <p class="text-gray-400 text-lg leading-relaxed">
                            Our engine fetches your README, parses it, and
                            transforms it into a structured documentation site.
                        </p>
                        <ul class="mt-6 space-y-3 text-gray-400">
                            <li class="flex items-start gap-3">
                                <svg
                                    class="w-5 h-5 text-purple-400 mt-1"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z"
                                    ></path></svg
                                >
                                <span>Lightning fast processing</span>
                            </li>
                            <li class="flex items-start gap-3">
                                <svg
                                    class="w-5 h-5 text-purple-400 mt-1"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
                                    ></path></svg
                                >
                                <span>Intelligent section breakdown</span>
                            </li>
                        </ul>
                    </div>
                    <div>
                        <div
                            class="bg-white/5 border border-white/10 rounded-xl p-6 shadow-2xl relative overflow-hidden group"
                        >
                            <div
                                class="absolute inset-0 bg-gradient-to-br from-indigo-500/10 to-purple-500/10 opacity-0 group-hover:opacity-100 transition-opacity"
                            >
                            </div>
                            <div class="relative space-y-3">
                                <div class="h-2 w-1/3 bg-white/10 rounded">
                                </div>
                                <div class="h-2 w-2/3 bg-white/10 rounded">
                                </div>
                                <div class="h-2 w-1/2 bg-white/10 rounded">
                                </div>
                                <div
                                    class="h-32 bg-white/5 rounded-lg border border-white/5 mt-4 flex items-center justify-center"
                                >
                                    <svg
                                        class="w-12 h-12 text-gray-600"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                        ><path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                        ></path></svg
                                    >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Step 3 -->
            <section class="relative">
                <div
                    class="absolute inset-0 bg-green-500/5 blur-3xl rounded-full"
                >
                </div>
                <div class="relative grid md:grid-cols-2 gap-12 items-center">
                    <div class="order-2 md:order-1">
                        <div
                            class="bg-white/5 border border-white/10 rounded-xl p-1 shadow-2xl"
                        >
                            <div class="bg-gray-900 rounded-lg p-4">
                                <div class="flex gap-4">
                                    <div
                                        class="w-1/4 space-y-2 border-r border-white/5 pr-4 hidden sm:block"
                                    >
                                        <div
                                            class="h-2 w-3/4 bg-white/10 rounded"
                                        >
                                        </div>
                                        <div
                                            class="h-2 w-1/2 bg-white/10 rounded"
                                        >
                                        </div>
                                        <div
                                            class="h-2 w-2/3 bg-white/10 rounded"
                                        >
                                        </div>
                                    </div>
                                    <div class="flex-1 space-y-3">
                                        <div
                                            class="h-4 w-1/3 bg-indigo-500/50 rounded mb-4"
                                        >
                                        </div>
                                        <div
                                            class="h-2 w-full bg-white/20 rounded"
                                        >
                                        </div>
                                        <div
                                            class="h-2 w-full bg-white/20 rounded"
                                        >
                                        </div>
                                        <div
                                            class="h-2 w-3/4 bg-white/20 rounded"
                                        >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="order-1 md:order-2">
                        <div class="flex items-center gap-4 mb-4">
                            <span
                                class="flex items-center justify-center w-8 h-8 rounded-full bg-green-500/20 text-green-400 font-bold border border-green-500/30"
                                >3</span
                            >
                            <h2 class="text-2xl font-bold text-white">
                                Share & Explore
                            </h2>
                        </div>
                        <p class="text-gray-400 text-lg leading-relaxed">
                            Get a shareable link for your documentation. Users
                            can search, navigate via the sidebar, and enjoy a
                            great reading experience.
                        </p>
                        <div class="mt-8">
                            <a
                                href="/generate"
                                class="inline-flex items-center bg-white text-gray-900 px-6 py-3 rounded-lg font-bold hover:bg-gray-100 transition-colors"
                            >
                                Try it now
                                <svg
                                    class="w-4 h-4 ml-2"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                                    ></path></svg
                                >
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</DocsLayout>
