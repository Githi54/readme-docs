---
import { ROUTES } from "@/consts";

interface Props {
    initialRepo?: string;
}

const { initialRepo = "" } = Astro.props;
---

<repo-generator data-initial-repo={initialRepo} class="block w-full">
    <!-- Success Container (Hidden by default) -->
    <div
        id="success-container"
        class="hidden relative max-w-2xl mx-auto mb-8 transition-all duration-500 ease-out transform -translate-y-4 opacity-0"
        data-visible-class="translate-y-0 opacity-100"
    >
        <div
            class="absolute inset-0 bg-gradient-to-r from-green-600/20 to-emerald-600/20 rounded-2xl blur-xl"
        >
        </div>
        <div
            class="relative bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl p-8 shadow-2xl text-center"
        >
            <div
                class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-500/20 text-green-400 mb-6"
            >
                <svg
                    class="w-8 h-8"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"></path>
                </svg>
            </div>

            <h2 class="text-3xl font-bold text-white mb-4">
                Documentation Ready!
            </h2>
            <p class="text-gray-400 mb-8 text-lg">
                Your documentation site for <span
                    id="repo-name-display"
                    class="text-indigo-400 font-semibold"></span> has been successfully
                generated.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    id="view-demo-btn"
                    href="#"
                    target="_blank"
                    class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-500 transition-all shadow-lg hover:shadow-indigo-500/30"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                        ></path>
                    </svg>
                    View Demo
                </a>

                <button
                    id="download-btn"
                    class="inline-flex items-center justify-center px-6 py-3 border border-gray-600 text-base font-medium rounded-lg text-gray-300 bg-white/5 hover:bg-white/10 transition-all hover:text-white"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                        ></path>
                    </svg>
                    Download Project
                </button>
            </div>
        </div>
    </div>

    <!-- Form Card -->
    <div
        class="relative transition-all duration-300 ease-in-out"
        id="form-card"
    >
        <div
            class="absolute inset-0 bg-gradient-to-r from-indigo-600/20 to-purple-600/20 rounded-2xl blur-xl"
        >
        </div>
        <div
            class="relative bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl p-8 shadow-2xl"
        >
            <form id="generate-form" class="space-y-6">
                <!-- Input Field -->
                <div>
                    <label
                        for="repo-url"
                        class="block text-sm font-medium text-gray-300 mb-2"
                    >
                        GitHub Repository
                    </label>
                    <input
                        type="text"
                        id="repo-url"
                        name="repoUrl"
                        placeholder="owner/repo or https://github.com/owner/repo"
                        class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all"
                        required
                    />
                    <p class="mt-2 text-sm text-gray-500">
                        Example: facebook/react or
                        https://github.com/facebook/react
                    </p>
                </div>

                <!-- Error Message -->
                <div
                    id="error-message"
                    class="hidden p-4 bg-red-500/10 border border-red-500/20 rounded-lg"
                >
                    <p class="text-sm text-red-400 flex items-center gap-2">
                        <svg
                            class="w-5 h-5"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <span id="error-text"></span>
                    </p>
                </div>

                <!-- Submit Button -->
                <button
                    type="submit"
                    id="submit-button"
                    class="w-full inline-flex items-center justify-center px-8 py-4 border border-transparent text-lg font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-500 transition-all shadow-[0_0_20px_rgba(99,102,241,0.5)] hover:shadow-[0_0_30px_rgba(99,102,241,0.7)] disabled:opacity-50 disabled:cursor-not-allowed"
                >
                    <span id="button-text">Generate Documentation</span>
                    <svg
                        id="button-icon"
                        class="ml-2 -mr-1 w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                    <svg
                        id="loading-spinner"
                        class="hidden ml-2 -mr-1 w-5 h-5 animate-spin"
                        fill="none"
                        viewBox="0 0 24 24"
                    >
                        <circle
                            class="opacity-25"
                            cx="12"
                            cy="12"
                            r="10"
                            stroke="currentColor"
                            stroke-width="4"></circle>
                        <path
                            class="opacity-75"
                            fill="currentColor"
                            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                        ></path>
                    </svg>
                </button>

                <!-- Progress Steps (hidden until generation starts) -->
                <div
                    id="progress-steps"
                    class="hidden mt-6 space-y-3 transition-all"
                >
                    <div
                        class="flex items-center gap-3 step-item"
                        data-step="0"
                    >
                        <div
                            class="step-icon w-6 h-6 rounded-full bg-gray-700/50 border border-gray-600/50 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                class="step-spinner w-3.5 h-3.5 text-gray-500 animate-spin hidden"
                                fill="none"
                                viewBox="0 0 24 24"
                            >
                                <circle
                                    class="opacity-25"
                                    cx="12"
                                    cy="12"
                                    r="10"
                                    stroke="currentColor"
                                    stroke-width="4"></circle>
                                <path
                                    class="opacity-75"
                                    fill="currentColor"
                                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                                ></path>
                            </svg>
                            <svg
                                class="step-check w-3.5 h-3.5 text-green-400 hidden"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2.5"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <span class="text-sm text-gray-500 step-label"
                            >Fetching repository data…</span
                        >
                        <span
                            class="text-[10px] text-gray-600 ml-auto font-mono step-time hidden"
                        ></span>
                    </div>
                    <div
                        class="flex items-center gap-3 step-item"
                        data-step="1"
                    >
                        <div
                            class="step-icon w-6 h-6 rounded-full bg-gray-700/50 border border-gray-600/50 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                class="step-spinner w-3.5 h-3.5 text-gray-500 animate-spin hidden"
                                fill="none"
                                viewBox="0 0 24 24"
                            >
                                <circle
                                    class="opacity-25"
                                    cx="12"
                                    cy="12"
                                    r="10"
                                    stroke="currentColor"
                                    stroke-width="4"></circle>
                                <path
                                    class="opacity-75"
                                    fill="currentColor"
                                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                                ></path>
                            </svg>
                            <svg
                                class="step-check w-3.5 h-3.5 text-green-400 hidden"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2.5"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <span class="text-sm text-gray-500 step-label"
                            >Parsing README.md…</span
                        >
                        <span
                            class="text-[10px] text-gray-600 ml-auto font-mono step-time hidden"
                        ></span>
                    </div>
                    <div
                        class="flex items-center gap-3 step-item"
                        data-step="2"
                    >
                        <div
                            class="step-icon w-6 h-6 rounded-full bg-gray-700/50 border border-gray-600/50 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                class="step-spinner w-3.5 h-3.5 text-gray-500 animate-spin hidden"
                                fill="none"
                                viewBox="0 0 24 24"
                            >
                                <circle
                                    class="opacity-25"
                                    cx="12"
                                    cy="12"
                                    r="10"
                                    stroke="currentColor"
                                    stroke-width="4"></circle>
                                <path
                                    class="opacity-75"
                                    fill="currentColor"
                                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                                ></path>
                            </svg>
                            <svg
                                class="step-check w-3.5 h-3.5 text-green-400 hidden"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2.5"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <span class="text-sm text-gray-500 step-label"
                            >Generating sections…</span
                        >
                        <span
                            class="text-[10px] text-gray-600 ml-auto font-mono step-time hidden"
                        ></span>
                    </div>
                    <div
                        class="flex items-center gap-3 step-item"
                        data-step="3"
                    >
                        <div
                            class="step-icon w-6 h-6 rounded-full bg-gray-700/50 border border-gray-600/50 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                class="step-spinner w-3.5 h-3.5 text-gray-500 animate-spin hidden"
                                fill="none"
                                viewBox="0 0 24 24"
                            >
                                <circle
                                    class="opacity-25"
                                    cx="12"
                                    cy="12"
                                    r="10"
                                    stroke="currentColor"
                                    stroke-width="4"></circle>
                                <path
                                    class="opacity-75"
                                    fill="currentColor"
                                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                                ></path>
                            </svg>
                            <svg
                                class="step-check w-3.5 h-3.5 text-green-400 hidden"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2.5"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <span class="text-sm text-gray-500 step-label"
                            >Building documentation site…</span
                        >
                        <span
                            class="text-[10px] text-gray-600 ml-auto font-mono step-time hidden"
                        ></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</repo-generator>

<script>
    import { parseRepositoryUrl } from "@/lib/utils";
    import { validateRepository } from "@/lib/api";

    class RepoGenerator extends HTMLElement {
        private form: HTMLFormElement;
        private input: HTMLInputElement;
        private submitButton: HTMLButtonElement;
        private buttonText: HTMLSpanElement;
        private buttonIcon: SVGElement;
        private loadingSpinner: SVGElement;
        private errorMessage: HTMLDivElement;
        private errorText: HTMLSpanElement;
        private successContainer: HTMLDivElement;
        private repoNameDisplay: HTMLSpanElement;
        private viewDemoBtn: HTMLAnchorElement;
        private downloadBtn: HTMLButtonElement;
        private progressSteps: HTMLDivElement;
        private stepItems: NodeListOf<HTMLElement>;
        private stepTimers: number[] = [];

        constructor() {
            super();

            // Bind elements
            this.form = this.querySelector("#generate-form") as HTMLFormElement;
            this.input = this.querySelector("#repo-url") as HTMLInputElement;
            this.submitButton = this.querySelector(
                "#submit-button",
            ) as HTMLButtonElement;
            this.buttonText = this.querySelector(
                "#button-text",
            ) as HTMLSpanElement;
            this.buttonIcon = this.querySelector(
                "#button-icon",
            ) as unknown as SVGElement;
            this.loadingSpinner = this.querySelector(
                "#loading-spinner",
            ) as unknown as SVGElement;
            this.errorMessage = this.querySelector(
                "#error-message",
            ) as HTMLDivElement;
            this.errorText = this.querySelector(
                "#error-text",
            ) as HTMLSpanElement;
            this.successContainer = this.querySelector(
                "#success-container",
            ) as HTMLDivElement;
            this.repoNameDisplay = this.querySelector(
                "#repo-name-display",
            ) as HTMLSpanElement;
            this.viewDemoBtn = this.querySelector(
                "#view-demo-btn",
            ) as HTMLAnchorElement;
            this.downloadBtn = this.querySelector(
                "#download-btn",
            ) as HTMLButtonElement;
            this.progressSteps = this.querySelector(
                "#progress-steps",
            ) as HTMLDivElement;
            this.stepItems = this.querySelectorAll(".step-item");

            // Bind events
            this.form.addEventListener("submit", this.handleSubmit.bind(this));
        }

        private connectedCallback() {
            const initialRepo = this.dataset.initialRepo;
            if (initialRepo) {
                this.input.value = initialRepo;
            }
        }

        private showLoading(loading: boolean) {
            this.submitButton.disabled = loading;
            if (loading) {
                this.buttonText.textContent = "Generating...";
                this.buttonIcon.classList.add("hidden");
                this.loadingSpinner.classList.remove("hidden");
                this.startProgressSteps();
            } else {
                this.buttonText.textContent = "Generate Documentation";
                this.buttonIcon.classList.remove("hidden");
                this.loadingSpinner.classList.add("hidden");
            }
        }

        private startProgressSteps() {
            // Reset all steps
            this.stepTimers.forEach((t) => clearTimeout(t));
            this.stepTimers = [];
            this.progressSteps.classList.remove("hidden");

            this.stepItems.forEach((item) => {
                const icon = item.querySelector(".step-icon") as HTMLElement;
                const spinner = item.querySelector(
                    ".step-spinner",
                ) as HTMLElement;
                const check = item.querySelector(".step-check") as HTMLElement;
                const label = item.querySelector(".step-label") as HTMLElement;
                const time = item.querySelector(".step-time") as HTMLElement;

                icon.className =
                    "step-icon w-6 h-6 rounded-full bg-gray-700/50 border border-gray-600/50 flex items-center justify-center flex-shrink-0";
                spinner.classList.add("hidden");
                check.classList.add("hidden");
                label.classList.remove("text-gray-300");
                label.classList.add("text-gray-500");
                time.classList.add("hidden");
                time.textContent = "";
                item.style.opacity = "0.5";
            });

            // Animate steps sequentially
            const stepDurations = [800, 1200, 400, 1600]; // ms, simulated
            let cumulativeDelay = 0;

            this.stepItems.forEach((item, i) => {
                // Activate step (show spinner)
                const activateTimer = window.setTimeout(() => {
                    const spinner = item.querySelector(
                        ".step-spinner",
                    ) as HTMLElement;
                    const label = item.querySelector(
                        ".step-label",
                    ) as HTMLElement;
                    spinner.classList.remove("hidden");
                    label.classList.remove("text-gray-500");
                    label.classList.add("text-gray-300");
                    item.style.opacity = "1";
                    item.style.transition = "opacity 0.3s ease";
                }, cumulativeDelay);
                this.stepTimers.push(activateTimer);

                cumulativeDelay += stepDurations[i];

                // Complete step (show checkmark)
                const completeTimer = window.setTimeout(() => {
                    const icon = item.querySelector(
                        ".step-icon",
                    ) as HTMLElement;
                    const spinner = item.querySelector(
                        ".step-spinner",
                    ) as HTMLElement;
                    const check = item.querySelector(
                        ".step-check",
                    ) as HTMLElement;
                    const time = item.querySelector(
                        ".step-time",
                    ) as HTMLElement;

                    icon.className =
                        "step-icon w-6 h-6 rounded-full bg-green-500/20 border border-green-500/40 flex items-center justify-center flex-shrink-0";
                    spinner.classList.add("hidden");
                    check.classList.remove("hidden");
                    time.classList.remove("hidden");
                    time.textContent = `${(stepDurations[i] / 1000).toFixed(1)}s`;
                }, cumulativeDelay);
                this.stepTimers.push(completeTimer);

                cumulativeDelay += 200; // small gap between steps
            });
        }

        private completeAllSteps() {
            this.stepTimers.forEach((t) => clearTimeout(t));
            this.stepTimers = [];
            const durations = [0.8, 1.2, 0.4, 1.6];
            this.stepItems.forEach((item, i) => {
                const icon = item.querySelector(".step-icon") as HTMLElement;
                const spinner = item.querySelector(
                    ".step-spinner",
                ) as HTMLElement;
                const check = item.querySelector(".step-check") as HTMLElement;
                const label = item.querySelector(".step-label") as HTMLElement;
                const time = item.querySelector(".step-time") as HTMLElement;

                icon.className =
                    "step-icon w-6 h-6 rounded-full bg-green-500/20 border border-green-500/40 flex items-center justify-center flex-shrink-0";
                spinner.classList.add("hidden");
                check.classList.remove("hidden");
                label.classList.remove("text-gray-500");
                label.classList.add("text-gray-300");
                time.classList.remove("hidden");
                time.textContent = `${durations[i]}s`;
                item.style.opacity = "1";
            });
        }

        private hideProgressSteps() {
            this.stepTimers.forEach((t) => clearTimeout(t));
            this.stepTimers = [];
            this.progressSteps.classList.add("hidden");
        }

        private showError(message: string) {
            this.errorText.textContent = message;
            this.errorMessage.classList.remove("hidden");
            this.hideProgressSteps();
            this.successContainer.classList.add("hidden");
            this.successContainer.classList.remove(
                "opacity-100",
                "translate-y-0",
            );
        }

        private showSuccess(parsed: { owner: string; repo: string }) {
            this.errorMessage.classList.add("hidden");
            this.completeAllSteps();

            this.repoNameDisplay.textContent = `${parsed.owner}/${parsed.repo}`;
            this.viewDemoBtn.href = `/docs/${parsed.owner}/${parsed.repo}`;

            this.downloadBtn.onclick = () => {
                window.location.href = `/api/download?owner=${parsed.owner}&repo=${parsed.repo}`;
            };

            // Show with animation
            this.successContainer.classList.remove("hidden");

            // Scroll to success message
            this.successContainer.scrollIntoView({
                behavior: "smooth",
                block: "center",
            });

            // Small timeout to allow the classList.remove("hidden") to apply before starting transition
            setTimeout(() => {
                this.successContainer.classList.add(
                    "translate-y-0",
                    "opacity-100",
                );
                this.successContainer.classList.remove("-translate-y-4");
            }, 10);
        }

        private async handleSubmit(e: Event) {
            e.preventDefault();
            this.errorMessage.classList.add("hidden");

            const inputValue = this.input.value.trim();
            if (!inputValue) {
                this.showError("Please enter a repository URL");
                return;
            }

            const parsed = parseRepositoryUrl(inputValue);
            if (!parsed.valid || !parsed.owner || !parsed.repo) {
                this.showError(
                    "Invalid repository format. Use: owner/repo or https://github.com/owner/repo",
                );
                return;
            }

            this.showLoading(true);

            try {
                await validateRepository(parsed.owner, parsed.repo);
                this.showSuccess({ owner: parsed.owner, repo: parsed.repo });
            } catch (error: any) {
                this.showError(
                    error.message ||
                        "Error generating documentation. Please try again.",
                );
                console.error("Generation error:", error);
            } finally {
                this.showLoading(false);
            }
        }
    }

    customElements.define("repo-generator", RepoGenerator);
</script>
