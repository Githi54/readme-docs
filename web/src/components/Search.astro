---
// Pagefind search component
---

<div id="search"></div>

<script is:inline>
    window.addEventListener("DOMContentLoaded", () => {
        if (window.PagefindUI) {
            new PagefindUI({
                element: "#search",
                showSubResults: true,
                showImages: false,
                excerptLength: 15,
                resetStyles: false,
            });
        }
    });
</script>

<style>
    #search {
        width: 100%;
    }

    :global(.pagefind-ui__form) {
        display: flex;
        align-items: center;
    }

    :global(.pagefind-ui__search-input) {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 0.5rem;
        color: white;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        width: 100%;
    }

    :global(.pagefind-ui__search-input:focus) {
        outline: none;
        border-color: rgb(99, 102, 241);
        box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.3);
    }

    :global(.pagefind-ui__search-input::placeholder) {
        color: rgba(255, 255, 255, 0.4);
    }

    :global(.pagefind-ui__results) {
        background: #1a1b1e;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 0.5rem;
        margin-top: 0.5rem;
        max-height: 400px;
        overflow-y: auto;
    }

    :global(.pagefind-ui__result) {
        padding: 0.75rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    :global(.pagefind-ui__result:hover) {
        background: rgba(99, 102, 241, 0.1);
    }

    :global(.pagefind-ui__result-title) {
        color: white;
        font-weight: 600;
    }

    :global(.pagefind-ui__result-excerpt) {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.875rem;
    }
</style>
